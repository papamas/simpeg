<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
>
    <m:MaterialPanel>
        <m:MaterialRow paddingTop="100">
            <m:MaterialColumn grid="s12">
                <m:MaterialCard backgroundColor="GREY_DARKEN_1">
                    <m:MaterialCardContent textColor="WHITE">
                        <m:MaterialCardTitle text="Sample" iconType="POLYMER" iconPosition="RIGHT"/>

                            <m:MaterialLabel ui:field="message" text="Nothing to display." fontSize="1.2em" float="LEFT" marginTop="20"/>

                            <m:MaterialRow ui:field="content">
                                <m:MaterialTextBox  ui:field="title" label="Title" />
                                <m:MaterialTextArea ui:field="text"  label="Text" />
                            </m:MaterialRow>
                    </m:MaterialCardContent>  
                </m:MaterialCard>    
                <m:MaterialCardAction>
                    <m:MaterialButton ui:field="save"   text="Save" size="LARGE"/>
                    <m:MaterialButton ui:field="cancel"   text="Cancel" size="LARGE"/>
                </m:MaterialCardAction>                  
            </m:MaterialColumn>            
        </m:MaterialRow>
    </m:MaterialPanel>
