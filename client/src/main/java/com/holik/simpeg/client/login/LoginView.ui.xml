<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:m='urn:import:gwt.material.design.client.ui'>
    <ui:style>
        .panel{
		 background: url("img/login.png");
		 background-size: 100%;
		 padding: 0px !important;
		 padding-top: 40% !important;
		 }
		 .fieldPanel{
		 background: white;
		 padding: 6%;
		 }
		 .imgProfile{
		 margin-top: -120px;
		 width: 40%;
		 margin-left: 30%;
		 border: 5px solid #fff;
		 }
		 .rowAction{
		 margin-top: 20px;
		 }
		 .login_demo{
		 padding: 5%;
		}

    </ui:style>
    <m:MaterialPanel>       
        <m:MaterialRow backgroundColor="GREY_LIGHTEN_4" addStyleNames="{style.login_demo}">
            <m:MaterialColumn grid="s12 m8 l6" offset="l4" >
             <m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
              <m:MaterialPanel addStyleNames="{style.fieldPanel}">
               <m:MaterialImage url="img/avatar3.png" type="CIRCLE" addStyleNames="{style.imgProfile} z-depth-1"/>
               <m:MaterialTextBox ui:field="login"  type="EMAIL" placeholder="Email"/>
               <m:MaterialTextBox ui:field="password" type="PASSWORD" placeholder="Password" />
               <m:MaterialButton ui:field="submit" waves="LIGHT" text="Sing In" width="100%"/>
                <m:MaterialRow addStyleNames="{style.rowAction}">
                
               </m:MaterialRow>
              </m:MaterialPanel>
             </m:MaterialPanel>
            </m:MaterialColumn>
        </m:MaterialRow>                  
    </m:MaterialPanel>
</ui:UiBinder>
