<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
>
    <m:MaterialPanel>
        <m:MaterialRow paddingTop="100">
            <m:MaterialColumn grid="s12">
                <m:MaterialCard backgroundColor="GREY_DARKEN_1">
                    <m:MaterialCardContent  textColor="WHITE">
                        <m:MaterialCardTitle text="Sample" iconType="POLYMER" iconPosition="RIGHT"/>
                        <m:MaterialLabel ui:field="message" text="No tasks available."/>
                        <!--
                        <m:MaterialListBox ui:field="listBox" grid="s6 m6" placeholder="Status Pegawai" />
                        !-->
                    </m:MaterialCardContent>
                </m:MaterialCard>
                <m:MaterialCardAction> 
                    <m:MaterialButton ui:field="add"  text="Add" size="LARGE"/>
                    <m:MaterialButton ui:field="refresh"  text="Refresh" size="LARGE"/>
                        
                </m:MaterialCardAction>
            </m:MaterialColumn>
        </m:MaterialRow>
    </m:MaterialPanel>
